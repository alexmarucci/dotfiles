{
  "title": "British pound to American pound",
  "rules": [
    {
      "description": "Change option+3 to shift+3",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "3",
            "modifiers": {
              "mandatory": ["right_option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "3",
              "modifiers": ["shift"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "3",
            "modifiers": {
              "mandatory": ["left_option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "3",
              "modifiers": ["shift"]
            }
          ]
        }
      ]
    },
    {
      "description": "Change shift+3 to option+3",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "3",
            "modifiers": {
              "mandatory": ["shift"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "3",
              "modifiers": ["right_option"]
            }
          ]
        }
      ]
    }
  ]
}
